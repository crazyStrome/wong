{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "构建 wong",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Wong/src/*.cc",
                "-I",
                "${workspaceFolder}/Wong/include",
                "-I",
                "${workspaceFolder}/Wong/vendor/spdlog/include",
                "-fPIC",
                "-shared",
                "-o",
                "${workspaceFolder}/bin/libwong.so"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "构建 sanbox",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Sandbox/src/*.cc",
                "-I",
                "${workspaceFolder}/Wong/include",
                "-I",
                "${workspaceFolder}/Wong/vendor/spdlog/include",
                "-L",
                "${workspaceFolder}/bin/",
                "-Wl,-rpath",
                "${workspaceFolder}/bin/",
                "-lwong",
                "-o",
                "${workspaceFolder}/bin/Sandbox"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}